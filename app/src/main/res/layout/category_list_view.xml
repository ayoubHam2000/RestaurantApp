<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="242dp"
    android:layout_height="55dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/CategoryColorBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/box1234"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/CategoryColor"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:background="@drawable/box14"
        app:layout_constraintBottom_toBottomOf="@+id/CategoryColorBottom"
        app:layout_constraintStart_toStartOf="@+id/CategoryColorBottom"
        app:layout_constraintTop_toTopOf="@+id/CategoryColorBottom" />

    <TextView
        android:id="@+id/CategoryName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"

        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/CategoryColorBottom"
        app:layout_constraintEnd_toStartOf="@+id/CategoryProductsNumber"
        app:layout_constraintStart_toEndOf="@+id/CategoryColor"
        app:layout_constraintTop_toTopOf="@+id/CategoryColorBottom" />

    <TextView
        android:id="@+id/CategoryProductsNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="33"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/CategoryColorBottom"
        app:layout_constraintTop_toTopOf="@+id/CategoryColorBottom" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/box2"
        app:layout_constraintBottom_toBottomOf="@+id/CategoryColorBottom"
        app:layout_constraintEnd_toEndOf="@+id/CategoryColorBottom" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:srcCompat="@drawable/removewhite" />

    <ImageView
        android:id="@+id/RemouveCategoryButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/patchCategoryButton"
        android:layout_width="19dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/CategoryColorBottom"
        app:layout_constraintStart_toEndOf="@+id/CategoryName"
        app:layout_constraintTop_toTopOf="@+id/CategoryColorBottom"
        app:srcCompat="@drawable/write" />


</androidx.constraintlayout.widget.ConstraintLayout>
