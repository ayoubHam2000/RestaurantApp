<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="140dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/ProductAddButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/addbox" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/ProductAddButton"
        app:layout_constraintEnd_toEndOf="@+id/ProductAddButton"
        app:layout_constraintStart_toStartOf="@+id/ProductAddButton"
        app:layout_constraintTop_toTopOf="@+id/ProductAddButton"
        app:srcCompat="@drawable/addblack" />

</androidx.constraintlayout.widget.ConstraintLayout>