<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="52dp">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/detail_box" />

    <CheckBox
        android:id="@+id/detailCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="HINDI"
        android:textColor="@color/white"
        app:buttonTint="@color/gold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintStart_toStartOf="@+id/imageView18"
        app:layout_constraintTop_toTopOf="@+id/imageView18" />

    <TextView
        android:id="@+id/detailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+20"
        android:textColor="@color/gold"
        app:layout_constraintBottom_toBottomOf="@+id/detailCheckBox"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintStart_toEndOf="@+id/detailCheckBox"
        app:layout_constraintTop_toTopOf="@+id/detailCheckBox"

        />

    <TextView
        android:id="@+id/detailPriceUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="MAD"
        android:textColor="@color/gold"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/detailPrice"
        app:layout_constraintStart_toEndOf="@+id/detailPrice"
        app:layout_constraintTop_toTopOf="@+id/detailPrice" />

    <ImageView
        android:id="@+id/deleteDelete2"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        app:srcCompat="@drawable/whiteletterx" />

    <ImageView
        android:id="@+id/modifyDetail2"
        android:layout_width="13dp"
        android:layout_height="12dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:srcCompat="@drawable/write" />

    <ImageView
        android:id="@+id/modifyDetail"
        android:layout_width="0dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView18"
        app:layout_constraintEnd_toEndOf="@+id/imageView18"
        app:layout_constraintStart_toStartOf="@+id/deleteDetail"
        app:srcCompat="@color/Transparent" />

    <ImageView
        android:id="@+id/deleteDetail"
        android:layout_width="27dp"
        android:layout_height="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView18"
        app:srcCompat="@color/Transparent" />
</androidx.constraintlayout.widget.ConstraintLayout>